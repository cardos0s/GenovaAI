<?xml version="1.0" encoding="utf-8"?>
<ContentView
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewModels="clr-namespace:GenovaAI.ViewModels"
    x:Class="GenovaAI.Components.CryptoCard"
    x:DataType="viewModels:CryptoCardViewModel">
    
   
                 <Border Margin="0,0,10,0"
                         Padding="10"
                         WidthRequest="150"
                         HeightRequest="150"
                         BackgroundColor="Yellow"
                         Stroke="White"
                         StrokeThickness="1"
                         StrokeShape="RoundRectangle 10">
                  <VerticalStackLayout VerticalOptions="Center" Spacing="8">
                      <Label Text="{Binding Name}" FontSize="14" TextColor="Black" />
                      <Label Text="{Binding Price, StringFormat='R$ {0:F2}'}" FontSize="20" FontAttributes="Bold" TextColor="LimeGreen" />
                  </VerticalStackLayout>
                 </Border>
          
 
</ContentView>