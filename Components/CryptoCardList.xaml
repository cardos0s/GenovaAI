<?xml version="1.0" encoding="utf-8"?>

<ContentView
    x:Class="GenovaAI.Components.CryptoCardList"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewModels="clr-namespace:GenovaAI.ViewModels"
    xmlns:components="clr-namespace:GenovaAI.Components"
    x:DataType="viewModels:CryptoCardListViewModel">

    <VerticalStackLayout Padding="10">

        <Label Text="Your Crypto Assets" FontAttributes="Bold" TextColor="White" Margin="-10,-10,0,0"/>

        <ScrollView Orientation="Horizontal" Margin="0" Padding="0">
            <CollectionView ItemsSource="{Binding Cards}" ItemsLayout="HorizontalList" HorizontalOptions="Start"
                            VerticalOptions="Center" Margin="-10">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="viewModels:CryptoCardViewModel">
                        <components:CryptoCard BindingContext="{Binding .}" />
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </ScrollView>

        <Button Text="ðŸ‘ Toggle Balance"
                Command="{Binding ToggleBalanceCommand}"
                BackgroundColor="#333" TextColor="White" />

    </VerticalStackLayout>
</ContentView>